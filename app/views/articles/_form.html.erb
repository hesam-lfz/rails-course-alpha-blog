<%= render 'shared/errors', obj: @article %>

<%= form_with(model: @article, local: true, data: { turbo: false }) do |f| %>
    <p>
        <%= f.label :title %>
        <br />
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %>
        <br />
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.label :categories %>
        <br />
        <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Optionally select 1 or more categories"}, {multiple: true, size: 5}) %>
    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>
