<section class="header">
    <div class="header-div">
        <div class="left margin-50">
            <span><%= link_to('Categories',categories_path) %></span>
            <span><%= link_to('Users', users_path) %></span>
            <span><%= link_to('Articles', articles_path) %></span>
        </div>
        <div class="right">
            <span><%= link_to('Sign up', signup_path) if not logged_in? %></span>        
            <span><%= logged_in? ? link_to('Logout', logout_path, data: { turbo_method: :delete }) : link_to('Login', login_path) %></span>
            <span><%= link_to((current_user.admin? ? '(admin)' : '') + current_user.username, user_path(current_user)) if logged_in? %></span>
        </div>
    </div>
<section>
